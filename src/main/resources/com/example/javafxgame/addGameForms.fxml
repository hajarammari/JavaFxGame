<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="CENTER" prefHeight="500.0" prefWidth="1000.0" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafxgame.addGame">
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />

   </rowConstraints>
   <children>
      <HBox styleClass="button-container" GridPane.columnSpan="3" GridPane.rowIndex="0">
         <Button fx:id="" mnemonicParsing="false" onAction="#onBackButtonClick" text="Back" />
         <Region HBox.hgrow="ALWAYS" />
         <Label styleClass="form-title" text="Add Game" />
         <Region HBox.hgrow="ALWAYS" />
         <Button fx:id="clearButton" mnemonicParsing="false" onAction="#onClearButtonClick" text="Clear" />
      </HBox>
      <Label text="Company" GridPane.rowIndex="1" />
      <TextField fx:id="company" alignment="CENTER" prefHeight="25.0" prefWidth="315.0" promptText="Company" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.columnSpan="2" />
      <Label text="Title" GridPane.rowIndex="2" />
      <TextField fx:id="title" alignment="CENTER" promptText="Title" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.columnSpan="2" />
      <Label text="Genre" GridPane.rowIndex="3" />
      <TextField fx:id="genre" alignment="CENTER" prefHeight="25.0" prefWidth="115.0" promptText="Genre" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.columnSpan="2" />
      <Label text="Release Year" GridPane.rowIndex="4" />
      <TextField fx:id="year" alignment="CENTER" promptText="Release Year" GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.columnSpan="2" />
      <Label text="Price" GridPane.rowIndex="5" />
      <TextField fx:id="price" alignment="CENTER" prefHeight="25.0" prefWidth="276.0" promptText="Price" GridPane.columnIndex="1" GridPane.rowIndex="5" GridPane.columnSpan="2" />
      <Label text="Rating" GridPane.rowIndex="6" />
      <TextField fx:id="rating" alignment="CENTER" layoutX="10.0" layoutY="249.0" prefHeight="25.0" prefWidth="276.0" promptText="Rating" GridPane.columnIndex="1" GridPane.rowIndex="6" GridPane.columnSpan="2" />
      <Button styleClass="fit-content-button" fx:id="saveButton" mnemonicParsing="false" onAction="#onHelloButtonClick" text="Save the game" GridPane.columnIndex="1" GridPane.rowIndex="8" GridPane.columnSpan="2" GridPane.halignment="CENTER" /> <!-- Updated saveButton properties -->
   </children>
</GridPane>