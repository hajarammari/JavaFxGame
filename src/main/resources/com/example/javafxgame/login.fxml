<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox alignment="CENTER" prefHeight="500.0" prefWidth="1000.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafxgame.login" styleClass="container">
    <VBox spacing="20.0">
        <VBox  alignment="CENTER" spacing="10.0">
            <Label styleClass="login-label" alignment="CENTER" >
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
                <text >Login</text>
            </Label>
        </VBox>


        <HBox spacing="10.0">
            <Label text="Username" styleClass="username-label" />
            <TextField fx:id="userId" prefHeight="25.0" prefWidth="143.0" promptText="Type your username" styleClass="username-input" />
        </HBox>

        <HBox spacing="10.0">
            <Label text="Password:" styleClass="password-label" />
            <PasswordField fx:id="pwd" promptText="Type your password" styleClass="password-input" />
        </HBox>

        <HBox alignment="CENTER" spacing="10.0">
            <Button fx:id="okBtn" onAction="#okClicked" text="LOGIN" styleClass="button" />
            <Button fx:id="cancelBtn" onAction="#cancelClicked" text="cancel" styleClass="button" />
        </HBox>
    </VBox>
</HBox>
